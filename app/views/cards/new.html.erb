<% title "Add a Card" %>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8 wrapper">
      <div class="container">
        <div class="row">
          <div class="col-sm">
            <h3 id="addcard">Add a <%= card_type %> Card</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-sm">
            <%= form_for(card, as: :card, url: card.persisted? ? card_path(card) : cards_path) do |form| %>
              <%= form.hidden_field(:type) %>
              <%= form.hidden_field(:user_id) %>
              <%= render partial: "shared/form/text_field", locals: {form: form, attribute: :title} %>
              <%= render partial: "shared/form/text_area", locals: {form: form, attribute: :description} %>
              <%= render partial: "shared/form/checkbox", locals: {form: form, attribute: :private} %>
              <%= render partial: "shared/form/text_field", locals: {form: form, attribute: :url} %>
              <%= render partial: "shared/form/text_area", locals: {form: form, attribute: :quote} %>
              <%= render partial: "shared/form/text_field", locals: {form: form, attribute: :source} %>
              <%= render partial: "shared/form/text_field", locals: {form: form, attribute: :author} %>
              <%= render partial: "shared/form/text_field", locals: {form: form, attribute: :location} %>
              <div class="form-group row">
                <div class="col-sm-2">
                  <%= link_to("Cancel", root_path, class: "btn btn-secondary") %>
                </div>
                <div class="col-sm-8"></div>
                <div class="col-sm-2 text-right">
                  <%= form.submit(card.persisted? ? "Update" : "Add", class: "btn btn-primary") %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>