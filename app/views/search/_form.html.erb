<div class="row">
  <div class="col-sm">
    <h5>Topic</h5>
    <form action="<%= search_path %>" method="get">
      <%= hidden_field_tag(:tag_type, "Topic") %>
      <%= select_tag(:tag, options_for_select(Topic.select_options)) %>
      <input type="submit" value="Search by  Topic">
    </form>
  </div>
  <div class="col-sm">
    <h5>Character</h5>
    <form action="<%= search_path %>" method="get">
      <%= hidden_field_tag(:tag_type, "Character") %>
      <%= select_tag(:tag, options_for_select(Character.select_options)) %>
      <input type="submit" value="Search by Character">
    </form>
  </div>
</div>