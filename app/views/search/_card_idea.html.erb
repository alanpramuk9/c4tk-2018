<div class="result">
  <div class="flexible">
    <%= image_tag("icons/#{card.type_identifier}.svg", class: "filetype")%>
    <div class="content">
      <p><%= card.title %></p>
      <% case card %>
      <% when Song, Video %>
        <%= link_to card.url %>
      <% when Picture %>
        <%= image_tag card.url, class: "img-thumbnail", style: "max-width: 200px; max-height: 100px" %>
      <% when Audio %>
        <% if card.source.present? %>
          <%= card.source %>
        <% else %>
          <%= link_to card.url %>
        <% end %>
      <% else %>
        <%= truncate(card.quote, length: 150) %>
      <% end %>
    </div>
    <div class="rightcontent">
      <% if current_user.latest_idea_board.card?(card) %>
        <%=
          link_to(
            remove_idea_card_path(
              idea_board_id: current_idea_board.id,
              card_id: card.id
            ),
            method: :delete
          ) do
        %>
          <%= image_tag("icons/check_yes.svg")%>
        <% end %>
      <% else %>
        <%=
          link_to(
            add_idea_card_path(
              idea_board_id: current_idea_board.id,
              card_id: card.id
            ),
            method: :post
          ) do
        %>
          <%= image_tag("icons/unchecked.svg")%>
        <% end %>
      <% end %>

      <%= link_to(card_path(card)) do %>
        <%= image_tag("icons/more_info.svg")%>
      <% end %>
    </div>
  </div>
</div>
<div class="modal">

</div>